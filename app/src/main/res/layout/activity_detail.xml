                        android:textSize="@dimen/main_menu_text_secondary"
                        android:textStyle="bold"
                        android:layout_marginBottom="4dp"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="@color/colorPrimaryDark" />
                    <TextView
                        android:layout_marginTop="4dp"
                        android:id="@+id/medDetail_golongan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/content_detail_act"/>
                </LinearLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/div_margin"
                android:background="@android:color/white"
                android:layout_marginBottom="8dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="@dimen/div_margin">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Bentuk Sediaan"
                        android:textSize="@dimen/main_menu_text_secondary"
