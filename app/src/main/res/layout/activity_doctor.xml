<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.studio.kodkod.sobat.DoctorActivity">

    <include
        android:id="@+id/main_toolbar"
        layout="@layout/main_toolbar"/>

    <TextView
        android:id="@+id/title"
        android:layout_below="@id/main_toolbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Masukkan Data Dokter"
        android:layout_centerHorizontal="true"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp" />

    <EditText
        android:id="@+id/nama_dokter"
        android:layout_below="@id/title"
        android:layout_width="match_parent"
        android:layout_margin="16dp"
        android:layout_height="48dp"
        android:hint="Nama Dokter"
        android:inputType="text"/>

    <EditText
        android:id="@+id/sip_dokter"
        android:layout_below="@id/nama_dokter"
        android:layout_width="match_parent"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:layout_height="48dp"
        android:hint="SIP"
        android:inputType="text"/>

    <EditText
        android:id="@+id/alamat_dokter"
        android:layout_below="@id/sip_dokter"
        android:layout_width="match_parent"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:layout_height="48dp"
        android:hint="Alamat Dokter"
        android:inputType="text"/>

    <Button
        android:id="@+id/nextBtn"
        android:layout_width="144dp"
        android:layout_height="48dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:layout_below="@id/alamat_dokter"
        android:text="Next"/>
</RelativeLayout>
